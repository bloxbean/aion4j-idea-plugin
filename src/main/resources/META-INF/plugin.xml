<idea-plugin>
    <id>org.aion4j.aion4j-idea-pugin</id>
    <name>Aion4j Avm Intellij Plugin</name>
    <vendor email="satran004@gmail.com" url="https://github.com/satran004/aion4j-idea-plugin/">Aion4j Idea Plugin Project</vendor>

    <description><![CDATA[
    Intellij Idea plugin for development on Avm, a java based VM for Aion blockchain
    ]]></description>

    <depends config-file="maven.xml" optional="true">org.jetbrains.idea.maven</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <localInspection implementationClass="org.aion4j.avm.idea.inspection.JCLWhitelistInspection" enabledByDefault="true" language="JAVA"/>
        <projectService
                serviceInterface="org.aion4j.avm.idea.service.AvmService"
                serviceImplementation="org.aion4j.avm.idea.service.AvmServiceImpl"/>

    </extensions>

