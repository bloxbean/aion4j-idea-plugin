<idea-plugin>
    <id>org.aion4j.avm</id>
    <name>Aion4j AVM Integration</name>
    <vendor email="satran004@gmail.com" url="https://github.com/satran004/aion4j-idea-plugin/">Aion4j Idea Project</vendor>

    <description><![CDATA[
    Intellij IDEA plugin for development on AVM, a java based VM for Aion blockchain.
    ]]></description>

    <depends config-file="maven.xml" optional="true">org.jetbrains.idea.maven</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <localInspection implementationClass="org.aion4j.avm.idea.inspection.JCLWhitelistInspection" enabledByDefault="true" language="JAVA"/>
        <projectService
                serviceInterface="org.aion4j.avm.idea.service.AvmService"
                serviceImplementation="org.aion4j.avm.idea.service.AvmServiceImpl"/>

    </extensions>

    <!--<extensions defaultExtensionNs="com.intellij">-->
        <!--<framework.type implementation="org.aion4j.avm.idea.framework.AvmFramework"/>-->
    <!--</extensions>-->

    <actions>
        <!--<group id="MyPlugin.SampleMenu" text="Greeting" description="Greeting menu">-->
            <!--<add-to-group group-id="MainMenu" anchor="last"/>-->
            <!--<action id="Myplugin.Textboxes" class="org.aion4j.avm.idea.HelloAction" text="Hello" description="Says hello"/>-->
        <!--</group>-->
    </actions>

    <project-components>
        <component>
            <interface-class>
                org.aion4j.avm.idea.component.Bootstrap
            </interface-class>
            <implementation-class>
                org.aion4j.avm.idea.component.BootstrapImpl
            </implementation-class>
        </component>
    </project-components>
</idea-plugin>